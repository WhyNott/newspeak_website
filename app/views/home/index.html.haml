:javascript
  (function () {
    'use strict';

    var graphData = #{@graph.to_json};

    new sigma({
      container: 'sigma-container',
      graph: graphData,
      settings: {
        edgeColor: 'default',
        defaultNodeColor: '#aaa',
        defaultEdgeColor: '#111'
      }
    });

    window.graphData = graphData;
  }());
