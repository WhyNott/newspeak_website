.page-header
  %h2 Become a member

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: { radio_buttons: :horizontal_radio_and_checkboxes }) do |f|
  = f.error_notification

  = f.input :name, require: true, autofocus: true
  = f.input :email, required: true
  = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
  = f.input :password_confirmation, required: true

  = f.simple_fields_for :subscription do |sub_form|
    = sub_form.association :plan, as: :radio_buttons, collection: Plan.all, label_method: :description, hint: "There is a one-time setup fee of #{Money.new(1000, 'GBP').format}"

  .form-group
    .col-sm-offset-3.col-sm-6
      = f.button :submit, 'Proceed to checkout', class: 'btn-success'
%hr/

= render "devise/shared/links"
