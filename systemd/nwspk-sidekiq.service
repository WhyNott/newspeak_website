[Unit]
Description=nwspk-sidekiq
After=network.target

[Service]
Type=simple
User=deploy
WorkingDirectory=/home/deploy/live
Environment="RAILS_ENV=production"
Environment="DB_POOL=5"
ExecStart=/home/deploy/.rbenv/shims/bundle exec sidekiq -c 5 -q default -q mailers
TimeoutSec=15
Restart=always

[Install]
WantedBy=multi-user.target
